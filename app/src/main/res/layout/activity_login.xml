<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/Title_Text"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="LIMS收样管理平台" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin">

        <TextView
            android:id="@+id/usernameTex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="账号："
            android:textColor="@color/black"
            android:textSize="@dimen/middle_test_size" />

        <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:layout_toRightOf="@+id/usernameTex"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请填写"
            android:maxLength="25"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_textColorHint"
            android:textSize="@dimen/middle_test_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/title_text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin">

        <TextView
            android:id="@+id/passwordTex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="密码："
            android:textColor="@color/black"
            android:textSize="@dimen/middle_test_size" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|left"
            android:layout_toRightOf="@+id/passwordTex"
            android:background="@null"
            android:cursorVisible="true"
            android:drawablePadding="12dp"
            android:hint="请填写密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_textColorHint"
            android:textSize="@dimen/middle_test_size" />
        <!--android:drawableRight="@drawable/view_default"-->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/title_text" />
    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="38dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@drawable/round_corner_blue_solid"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_test_size" />

</LinearLayout>