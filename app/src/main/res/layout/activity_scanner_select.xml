<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/Title_Text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="LIMS收样管理平台" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_nameKey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="欢迎您："
            android:textColor="@color/black"
            android:textSize="@dimen/middle_test_size" />

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txt_nameKey"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="广饶工厂李某某"
            android:textColor="@color/black"
            android:textSize="@dimen/middle_test_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_loginout"
                android:layout_width="88dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/round_corner_blue_solid"
                android:text="退出"
                android:textColor="@color/white"
                android:textSize="@dimen/middle_test_size" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"

        android:layout_marginBottom="32dp"
        android:background="@color/title_text" />


    <Button
        android:id="@+id/btn_cannerOne"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_corner_blue_solid"
        android:text="样品收样扫码"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_test_size" />

    <Button
        android:id="@+id/btn_cannerTwo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@drawable/round_corner_blue_solid"
        android:text="成品轮胎扫码"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_test_size" />

</LinearLayout>